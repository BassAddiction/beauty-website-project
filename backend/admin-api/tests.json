{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Unauthorized request",
      "method": "GET",
      "path": "/?action=plans",
      "expectedStatus": 401
    },
    {
      "name": "Get plans with invalid password",
      "method": "GET",
      "path": "/?action=plans",
      "headers": {
        "X-Admin-Password": "wrong"
      },
      "expectedStatus": 401
    }
  ]
}